<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/vicrab-dev?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false"
                        userId="root"
                        password="huachen123">
        </jdbcConnection>
        <!--  默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer
                 true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal
             -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--<javaModelGenerator targetPackage="com.vicrab.api.repository.entity" targetProject="src/main/java"/>-->

        <!--<sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>-->

        <!--<javaClientGenerator targetPackage="com.vicrab.api.repository.mapper" targetProject="src/main/java"-->
        <!--type="XMLMAPPER" />-->

        <javaModelGenerator targetPackage="com.vicrab.api.repository.entity"
                            targetProject="target/classes"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="target/classes"/>

        <javaClientGenerator targetPackage="com.vicrab.api.repository.mapper"
                             targetProject="target/classes"
                             type="XMLMAPPER"/>

        <table tableName="vc_bill%" selectByExampleQueryId="true" enableCountByExample="true"
               enableSelectByExample="true">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
        </table>
    </context>
</generatorConfiguration>